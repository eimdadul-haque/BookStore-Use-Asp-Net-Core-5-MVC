@model IEnumerable<Category>

@{
    ViewData["Title"] = "Catagory | Index";
}

<div class="container">

</div>

<div class="container text-center mt-3">
    <div class="row  mb-3 d-flex justify-content-end">
        <div class="col-6">
            <div class="text-right">
                <a asp-controller="Category" asp-action="Add_Edit" class="btn btn-info ">&dagger; Add Category</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">

        </div>
        <div class="col-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.category
                                </td>
                                <td>
                                    <partial name="_ButtonGroup" model="@item.Id" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        function myclick() {
            window.alert("Confirm...")
        }
    </script>

}