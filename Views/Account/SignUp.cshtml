@model SignUp


<div class="container">
    <div class="row d-flex justify-content-end mt-5">
        <div class="col-5">
            <form asp-controller="Account" asp-action="SignUp" method="post">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName"></span>
                </div>   
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Phone" class="form-control" placeholder="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <input asp-for="BirthDay" class="form-control" placeholder="Bith Date" />
                    <span asp-validation-for="BirthDay"></span>
                </div>
                <div class="form-group">
                    <select asp-for="Gender" class="form-control">
                        <option>Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <input class="form-control btn-success" type="submit" value="Sign UP" />
                </div>
            </form>
        </div>

        <div class="col-7">
            <img class="text-lg-left w-100" src="~/assets/undraw_secure_login_pdn4.svg" />
        </div>
    </div>
</div>