@model LogIn

<div class="container-fluid h-100">
    <div class="row">
        <div class="col-8 row d-flex justify-content-start" style="margin-top: 100px">
            <div class="col-12">
                <img class="w-100" height="400px" src="~/assets/undraw_Login_re_4vu2.svg" />
            </div> 
        </div>
        <div class="col-4 mt-4">
            <div class="row">
                <div class="col-10 card" style="margin-top: 150px">
                    <form asp-controller="Account" asp-action="LogIn" class="mt-3">
                        <div class="form-group">
                            <input asp-for="Email" placeholder="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="form-control btn-info" value="Log In" />
                        </div> 
                        <div class="form-group border w-100"></div>
                        <div class="form-group d-flex justify-content-center mb-3">
                            <a  asp-controller="Account" asp-action="SignUp" class="w-25 form-control btn btn-outline-success" >SignUp</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>